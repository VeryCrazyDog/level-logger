{
	"compilerOptions": {
		// Strict checks
		"strict": true,
		// Project options, configured based on https://stackoverflow.com/a/59787575/1131246
		"target": "ES2019",
		"lib": [ "es2019", "es2020.bigint", "es2020.string", "es2020.symbol.wellknown" ],
		"module": "CommonJS",
		"declaration": true,
		"rootDir": "./src",
		"outDir": "./dist",
		// Module resolution
		"esModuleInterop": true,
		// Advanced
		"forceConsistentCasingInFileNames": true
	}
}
